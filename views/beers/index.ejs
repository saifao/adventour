<!DOCTYPE html>
<html>

<head>

    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Style</th>
                <th>Origin No</th>
                <th>ABV</th>
            </tr>
        </thead>
        <tbody>
            <% beers.forEach(function(beer) { %>
                <tr>
                    <td>
                        <a href="/beers/<%= beer._id %>">
                            <%= beer.name %>
                        </a>
                    </td>
                    <td>
                        <%= beer.style %>
                    </td>
                    <td>
                        <%= beer.origin %>
                    </td>
                    <td>
                        <%= beer.abv %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>


</body>

</body>

</html>