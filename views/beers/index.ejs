<%- include('../partials/header') %>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Style</th>
                <th>Origin No</th>
                <th>ABV</th>
            </tr>
        </thead>
        <tbody>
            <% beers.forEach(function(beer) { %>
                <tr>
                    <td>
                        <a href="/beers/<%= beer._id %>">
                            <%= beer.name %>
                        </a>
                    </td>
                    <td>
                        <%= beer.style %>
                    </td>
                    <td>
                        <%= beer.origin %>
                    </td>
                    <td>
                        <%= beer.abv %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>