<%- include('../partials/header') %>

    <form action="/beers" method="POST">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Style</th>
                    <th>Origin No</th>
                    <th>ABV</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" name="name"></td>
                    <td><select name="style">
                            <option value="Pilsner">Pilsner</option>
                            <option value="Pale Ale">Pale Ale</option>
                            <option value="Stout">Stout</option>
                            <option value="Stout">Porter</option>
                            <option value="Stout">IPA</option>
                        </select>
                    </td>
                    <td><input type="text" name="origin"></td>
                    <td><input type="text" name="abv"></td>
                    <td><select name="breweries" id="breweryList">
                            <% breweries.forEach(function(brewery) { %>
                                <option value="<%= brewery.id %>">
                                    <%= brewery.name %>
                                </option>
                                <% }); %>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
        <br>
        <button>Add Beer</button>

    </form>
    <br>
    <button id="refresh">Refresh Breweries</button>

    <%- include('../partials/footer') %>